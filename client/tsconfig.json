{
  "include": ["src/**/*.ts", "src/**/*.tsx", "../global/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.spec.ts", "src/components/RouterComponents/DataInput/D_DataInput.tsx"],
  "compilerOptions": {
    "outDir": "./dist/js/",
    "allowSyntheticDefaultImports": false,
    "target": "es5",
    "downlevelIteration": true,
    "importHelpers": true,
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": false,
    "checkJs": false,
    "lib": ["dom", "esnext"],
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": false,
    "removeComments": true,
    "typeRoots": ["./node_modules/@types"],
    "esModuleInterop": false // we don't have issues related to imports
  }
}
